<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean"
    tools:context=".AnimalMemory">

    <ImageView
        android:id="@+id/image_gameover"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_marginBottom="17dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_gameover"
        android:focusable="auto"
        android:translationZ="7dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView_click_counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/starfish"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_click_counter"
        android:layout_width="66dp"
        android:layout_height="45dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/light_bulb"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/click_counter"
        android:textColor="#290767"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button_ghost20"
        app:layout_constraintStart_toEndOf="@+id/textView_pair_counter"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost18" />

    <Button
        android:id="@+id/button_ghost1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ghost"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="29dp" />

    <Button
        android:id="@+id/button_ghost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ghost"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="29dp" />

    <Button
        android:id="@+id/button_ghost3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ghost"
        app:layout_constraintEnd_toStartOf="@+id/button_ghost1"
        app:layout_constraintStart_toEndOf="@+id/button_ghost2"
        tools:layout_editor_absoluteY="26dp" />

    <Button
        android:id="@+id/button_ghost4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ghost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost1" />

    <Button
        android:id="@+id/button_ghost5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ghost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost2" />

    <Button
        android:id="@+id/button_ghost6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/ghost"
        app:layout_constraintEnd_toStartOf="@+id/button_ghost2"
        app:layout_constraintStart_toEndOf="@+id/button_ghost1"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost3" />

    <Button
        android:id="@+id/button_ghost7"
