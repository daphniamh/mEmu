        android:background="@drawable/ghost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost8" />

    <Button
        android:id="@+id/button_ghost12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/ghost"
        app:layout_constraintEnd_toStartOf="@+id/button_ghost8"
        app:layout_constraintStart_toEndOf="@+id/button_ghost7"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost9" />

    <Button
        android:id="@+id/button_ghost13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ghost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ghost10" />

    <Button
        android:id="@+id/button_ghost14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ghost"
        app:layout_constraintEnd_toEndOf="parent"
